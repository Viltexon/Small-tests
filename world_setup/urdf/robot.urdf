<?xml version="1.0" ?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="camera_size" value="0.1 0.1 0.1"/>
    <xacro:property name="link_chassis_size" value="2 1 0.5"/>
    <xacro:property name="link_arm_size" value="0.2 0.2 1"/>

	<xacro:include filename="$(find world_setup)/urdf/robot.gazebo"/>

	<link name="link_chassis">
		<pose>0 0 0.1 0 0 0</pose>
		<inertial>
			<origin rpy="0 0 0" xyz="0 0 0.1"/>
			<mass value="1"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>
		<collision name="collision_chassis">
			<geometry>
				<box size="${link_chassis_size}"/>
			</geometry>
		</collision>
		<visual name="visual">
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<box size="${link_chassis_size}"/>
			</geometry>
		</visual>
	</link>

	<joint name="joint_1" type="continuous">
		<origin rpy="0 0 0" xyz="0.6 0 0.5"/>
		<parent link="link_chassis"/>
		<child link="link_arm"/>
	</joint>

	<link name="link_arm">
		<pose>0 0 0 0 0 0</pose>
		<inertial>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<mass value="0.5"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
		</inertial>
		<collision name="collision_chassis">
			<geometry>
				<box size="${link_arm_size}"/>
			</geometry>
		</collision>
		<visual name="visual">
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<box size="${link_arm_size}"/>
			</geometry>
		</visual>
	</link>

	<joint name="camera_joint" type="fixed">
		<axis xyz="0 1 0"/>
		<origin rpy="0 0 0" xyz="0.2 0 0.5"/>
		<parent link="link_arm"/>
		<child link="camera_link"/>
	</joint>

	<!-- Camera -->
	<link name="camera_link">
		<collision>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<box size="${camera_size}"/>
			</geometry>
		</collision>
		<visual>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<box size="${camera_size}"/>
			</geometry>
			<material name="red"/>
		</visual>
		<inertial>
			<mass value="0.1"/>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
		</inertial>
	</link>

</robot>
